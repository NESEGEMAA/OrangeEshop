@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (!Model.Any())
{
    <p>No products available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("F2")</td> <!-- Format price to two decimal places -->
                    <td>@(product.Category?.Name ?? "No Category")</td>
                    <td>
                        <a href="@Url.Action("Update", new { id = product.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Container for the button -->
<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("Create", "Products")" class="btn btn-primary">Create New Product</a>
</div>
